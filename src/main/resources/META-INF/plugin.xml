<idea-plugin>
    <id>nikolay-egorov.Reviewer</id>
    <name>Plugin display name here</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="Reviewer" secondary="true" anchor="bottom"
                    factoryClass="nikolayEgorov.myToolWindow">
        </toolWindow>
        <applicationConfigurable instance="nikolayEgorov.ui.Reviewer"></applicationConfigurable>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="reviewer.add_reason" class="nikolayEgorov.actions.AddReasonAction" text="Add  Reason"
                description="Adds a new review  reason"/>
        <action id="reviewer.clear_reasons" class="nikolayEgorov.actions.ClearReasonsAction" text="Clear Reason"
                description="Clears all reasons"/>
        <group id="reviewer" text="Reviewer Helper" description="Reviewer Plugin">
            <reference id="reviewer.add_reason"/>
            <reference id="reviewer.clear_reasons"/>
        </group>
        <group id="reviewer.toolbar_acts">
            <reference id="reviewer.clear_reasons"/>
        </group>
    </actions>

    <application-components>
        <component>
            <implementation-class>nikolayEgorov.ui.ReviewProvider</implementation-class>
            <interface-class>nikolayEgorov.ui.ReviewProvider</interface-class>
        </component>
    </application-components>
</idea-plugin>